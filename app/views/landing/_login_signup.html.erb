  <div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <a href="#" class="active" id="login-form-link">Login</a>
              </div>
              <div class="col-xs-6">
                <a href="#" id="register-form-link">Register</a>
              </div>
            </div>
            <hr>
          </div>
          <div class="login-box panel-body">
            <div class="row">
              <div class="col-lg-12">
                <%= form_for :session, url: login_path, html:{style: 'display:block;'} do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control", placeholder: 'Email', tabindex: 1 %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", placeholder: 'Password'%>
                  </div>
                  <div class="form-group text-center">
                    <%= f.label :remember, class: 'checkbox text-center' do  %>
                      <%= f.check_box :remember %>Stay logged in?
                    <% end %>
                  </div>
                    <%= f.submit "Login", class: "form-control btn btn-login", id: 'login-submit'%>
                  <% end %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>